<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel="stylesheet" href="/users.css">
  </head>
  <body>
    <%- include('ui/nav.ejs') %>
    <h1>Users</h1>
    <div class="container">
      <% if (users.length === 0) { %>
        <p>No users found.</p>
     <% } else { %>
      <% users.forEach(function(user) { %>
        <div class="card">
                <img src="<%= user.profilePic %>" alt="profile picture">
                    <div><%= user.name %></div>
                    <div><%= user.techStack %></div>
                    <form action="/delete/" method="POST"">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button type="submit">Delete</button>
                    </form>
                    <div class="edit">
                        <a href="/edit/<%= user.id %>">Edit</a>
                 </div>
                 <div  class="submitproject">
                  <a href="/projects/<%= user.id %>">Submit Projects</a>
           </div>
           <div  class="viewprojects">
            <a href="/viewprojects/<%= user.id %>">View Projects</a>
     </div>
        </div>
          <% }); %>
        <% } %>
    </div>
  </body>
</html>