<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/users.css" />

    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body>
    <%- include('ui/nav.ejs') %>

    <div class="container">
      <% if (users.length===0) { %>
      <div class="no-users">
        <img src="../assets/nouser.svg" alt="no user found" width="400px" />
        <h2>No User Found</h2>
      </div>

      <% } else { %> <% users.forEach(function(user) { %>
      <div class="card">
        <img src="<%= user.profilePic %>" alt="profile picture" />
        <div><%= user.firstname %> <%= user.lastname %></div>
        <div><%= user.techStack %></div>
        <div class="button-container">
          <div class="delete">
            <a href="/delete/<%= user.id %>"> <i class="fa fa-trash"></i></a>
          </div>

          <div class="edit">
            <a href="/edit/<%= user.id %>">
              <i class="fa fa-pencil"></i>
            </a>
          </div>
          <div class="submitproject">
            <a href="/projects/<%= user.id %>"><i class="fa fa-plus"></i></a>
          </div>
          <div class="viewprojects">
            <a href="/viewprojects/<%= user.id %>">
              <i class="fa fa-eye"></i>
            </a>
          </div>
        </div>
      </div>
      <% }); %> <% } %>
    </div>
  </body>
</html>
